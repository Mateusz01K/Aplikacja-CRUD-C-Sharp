@model Projekt.Models.Rents.RentViewModel
@{
    ViewData["Title"] = "Wypożycz film";
}
<div class="text-center">
    <h1 class="display-4">Wypożycz film</h1>
    <p>Wybierz ID filmu który chcesz wypożyczyć, a następnie swoje imie i nazwisko</p>
</div>
<div class="text-center d-flex mb-5">
        <table class="table table-hover m-2">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Tytuł filmu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Films)
                {
                    <tr>
                        <td scope="row">@item.Id</td>
                        <td scope="row">@item.Title</td>
                    </tr>
                }
            </tbody>
        </table>
    <table class="table table-hover m-2">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Imie</th>
                    <th scope="col">Nazwisko</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td scope="row">@item.Id</td>
                        <td scope="row">@item.FirstName</td>
                        <td scope="row">@item.LastName</td>
                    </tr>
                }
            </tbody>
        </table>
</div>
<form method="post" asp-controller="Rent" asp-action="RentThisFilm">
    <div class="form-group">
        <label for="Id">ID filmu: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="Id" placeholder="ID filmu" name="filmId">
    </div>
    <div class="form-group">
        <label for="Id">ID użytkownika: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="Id" placeholder="ID użytkownika" name="userId">
    </div>

    <div class="text-center m-5">
        <button type="submit" class="btn btn-success">Wypożycz</button>
        <a class="btn btn-danger" href="javascript: history.go(-1)">Wróć</a>
    </div>
</form>
