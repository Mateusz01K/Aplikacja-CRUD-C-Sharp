@model Projekt.Models.Films.FilmsViewModel
@{
    ViewData["Title"] = "Lista filmów";
}
@if (TempData["message"] != null)
{
    <script>
        alert('@TempData["message"]');
    </script>
}
<div class="text-center">
    <h1 class="display-4">Lista filmów</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tytuł</th>
                <th scope="col">Opis</th>
                <th scope="col">Reżyser</th>
                <th scope="col">Rok produkcji</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Films)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Title</td>
                    <td scope="row">@item.Desc</td>
                    <td scope="row">@item.Director</td>
                    <td scope="row">@item.YearOfProduction</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center m-5">
        <a class="btn btn-outline-success" asp-area="" asp-controller="Films" asp-action="InsertNewFilm" role="button">Wprowadź nowy film</a>
        <a class="btn btn-outline-warning" asp-area="" asp-controller="Films" asp-action="UpDateFilm" role="button">Edytuj film</a>
        <a class="btn btn-outline-danger" asp-area="" asp-controller="Films" asp-action="DeleteFilm" role="button">Usuń film</a>
    </div>


</div>
