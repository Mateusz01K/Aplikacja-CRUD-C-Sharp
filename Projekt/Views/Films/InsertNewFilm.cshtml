@{
    ViewData["Title"] = "Nowy film";
}
<form method="post" asp-controller="Films" asp-action="InsertFilm">
    <div class="form-group">
        <label for="title">Tytuł: <span style="color:red">*</span></label>
        <input type="text" class="form-control" id="title" placeholder="Tytuł" name="title">
    </div>
    <div class="form-group">
        <label for="desc">Opis: <span style="color:red">*</span></label>
        <input type="text" class="form-control" id="desc" placeholder="Opis" name="desc">
    </div>
    <div class="form-group">
        <label for="director">Reżyser: <span style="color:red">*</span></label>
        <input type="text" class="form-control" id="director" placeholder="Reżyser" name="director">
    </div>
    <div class="form-group">
        <label for="yearofproduction">Rok produkcji: <span style="color:red">*</span></label>
        <input type="number" class="form-control" id="yearofproduction" placeholder="Rok produkcji" name="yearofproduction">
    </div>
    <div class="text-center m-5">
        <button type="submit" class="btn btn-success">Wprowadź</button>
        <a class="btn btn-danger" href="javascript: history.go(-1)">Wróć</a>
    </div>
</form>