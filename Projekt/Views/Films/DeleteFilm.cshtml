@model Projekt.Models.Films.FilmsViewModel
@{
    ViewData["Title"] = "Usuwanie filmu";
}
<div class="text-center mb-5">
    <h1 class="display-4">Lista filmów</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tytuł</th>
                <th scope="col">Opis</th>
                <th scope="col">Reżyser</th>
                <th scope="col">Rok produkcji</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Films)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Title</td>
                    <td scope="row">@item.Desc</td>
                    <td scope="row">@item.Director</td>
                    <td scope="row">@item.YearOfProduction</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form method="delete" asp-controller="Films" asp-action="DeleteThisFilm">
    <div class="form-group">
        <label for="Id">ID filmu do usunięcia: <span style="color:red">*</span></label>
        <input type="text" class="form-control" id="Id" placeholder="ID filmu" name="Id">

        <div class="text-center m-5">
            <button type="submit" class="btn btn-danger">Usuń</button>
            <a class="btn btn-outline-danger" href="javascript: history.go(-1)">Wróć</a>
        </div>
    </div>
</form>